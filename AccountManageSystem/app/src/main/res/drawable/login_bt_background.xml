<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:Android="http://schemas.android.com/apk/res-auto">

     <!-- 默认时的背景图片-->
     <item android:drawable="@drawable/login_bt_uncheck"/>
     <!-- 没有焦点时的背景图片 -->
     <item
       android:state_window_focused="false"
         android:drawable="@drawable/login_bt_uncheck"
        />
     <!-- 触摸模式下单击时的背景图片-->
     <item
      android:state_focused="false"
         android:state_pressed="true"
        android:drawable="@drawable/login_bt_check"
        />
     <!--选中时的图片背景和获得焦点-->
     <item
        android:state_selected="true"
         android:state_focused="true"
        android:drawable="@drawable/login_bt_check"
        />

</selector>