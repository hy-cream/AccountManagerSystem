<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/account_rv_tv_inmoney"
            android:text="工资+1000"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:id="@+id/account_rv_tv_indate"
            android:text="交通-1000"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentBottom="true"/>
        <RelativeLayout
            android:id="@+id/account_rv_tab"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/account_rv_ivbackground">

            <ImageView
                android:id="@+id/account_rv_iv_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_zhuanchu"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <View
            android:layout_above="@id/account_rv_tab"
            android:layout_centerHorizontal="true"
            android:background="#717171"
            android:layout_width="1dp"
            android:layout_height="25dp"/>
    </RelativeLayout>


</RelativeLayout>