<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/more_rl_group">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff">
        <TextView
            android:text="更多"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <ImageButton
            android:id="@+id/more_ib_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_setup"
            android:layout_alignParentRight="true"
            android:background="#00000000"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@mipmap/bg_mine_header">

        <ImageView
            android:id="@+id/more_iv_userPhoto"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@mipmap/mine_pic_nor"
            android:background="@drawable/more_userphoto"/>
        <TextView
            android:id="@+id/more_tv_isLogin"
            android:text="请登录"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff"
        android:layout_marginTop="10dp">
        <TextView
            android:text="手势密码"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"/>

        <ImageButton
            android:id="@+id/more_ib_handPasswd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/check_button_off"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="#00000000"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/more_lv_writeAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

    </ListView>

    <ListView
        android:id="@+id/more_lv_shareFriends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

    </ListView>
    <ListView
        android:id="@+id/more_lv_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#515658"
        android:layout_marginTop="10dp">

    </ListView>

</LinearLayout>
</RelativeLayout>